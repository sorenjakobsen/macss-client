{
    "scopeName": "source.macss",
    "name": "Macs/s",
    "fileTypes": ["macss"],
    "patterns": [

        {
            "begin": "^ *[a-z]",
            "beginCaptures": {
              "0": {
                "name": "entity.name.function"
              }
            },
            "end": "$",
            "endCaptures": {
              "0": {
                "name": ""
              }
            },
            "name": "",
            "patterns": [
                {
                    "match": "\\b[vrsop]",
                    "name": "variable"
                },
                {
                    "match": "!.*$",
                    "name": "comment"
                },
                {
                    "match": "\\/",
                    "name": "entity.name.function"
                }
            ]
        },

        {
            "begin": "^ *[1-3]",
            "beginCaptures": {
              "0": {
                "name": "variable"
              }
            },
            "end": "$",
            "endCaptures": {
              "0": {
                "name": ""
              }
            },
            "name": "",
            "patterns": [
                {
                    "match": "!.*$",
                    "name": "comment"
                },
                {
                    "match": "\\/",
                    "name": "entity.name.function"
                }
            ]
        },

        {
            "match": "!.*$",
            "name": "comment"
        }

    ]
}
